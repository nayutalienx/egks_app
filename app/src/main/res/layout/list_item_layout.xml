<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    >

    <TextView
        android:id="@+id/cardId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:visibility="gone"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_weight="30"
        android:id="@+id/cardNameHolder"
        android:text="Name"
        android:textSize="20dp"
        android:fontFamily="@font/cengo"
        android:textColor="#00629F"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        >

        <TextView android:gravity="center"
            android:text="000xxxxxx"
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:id="@+id/cardNumberItem"
            android:textSize="17dp"
            android:textColor="#00629F"
            android:fontFamily="@font/cengo"/>
        <TextView android:gravity="center"
            android:text="500 rub"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:layout_width="match_parent"
            android:id="@+id/cardBalanceItem"
            android:fontFamily="@font/cengo"
            android:textColor="#00629F"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="20"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/edit"

            />
    </LinearLayout>>



</LinearLayout>